
<div class="box newAlbum"><%unless flash[:notice].nil?%>
<p id="notice">
	<%= flash[:notice] %>
</p>
<%end%>
<table class="albumDetails">
	<thead>
		<tr>
			<th>Sl.No.</th>
			<th>Name</th>
			<th>Total Photos</th>
			<th>Created On</th>
			<th>Updated On</th>
		</tr>
	</thead>
	<tbody>
		<% @albums.each_with_index do |album, i| %>
		<tr>
			<td><%= i+1%></td>
			<td><%= link_to album.name , album_url(album)%></td>
			<td><%= album.photos.count%></td>
			<td><%= album.created_at%></td>
			<td><%= album.updated_at%></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br /><br /><br />
<footer>
	<u><%= link_to 'New Album', new_album_path ,:class => 'btnSubmit'%></u>
</footer>

</div>
